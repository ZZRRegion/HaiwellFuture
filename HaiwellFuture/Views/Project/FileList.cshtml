@using System.IO;
@model List<FileInfo>
@{
    ViewData["Title"] = "FileList";
}
<div class="container">
    <h1 class="text-primary">已上传文件列表</h1>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>文件名</th>
                <td>更新时间</td>
                <td>文件大小</td>
                <td>操作</td>
            </tr>
        </thead>
        <tbody>
            @foreach (FileInfo fi in this.Model)
            {
                <tr>
                    <td>@fi.Name</td>
                    <td>@fi.LastWriteTime</td>
                    <td>@(fi.Length / 1024)Kb</td>
                    <td>
                        <div class="row">
                            <div class="col-md-3">
                                <a asp-controller="Project" asp-action="GetFile" asp-route-name="@fi.Name" class="btn btn-primary">下载</a>
                            </div>
                            <div class="col-md-3">
                                <a asp-controller="Project" asp-action="FileDelete" asp-route-name="@fi.Name" class="btn btn-danger">删除</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

